option_settings:
  aws:elasticbeanstalk:application:environment:
    # Database configuration from GitHub Secrets
    DB_HOST: "${DB_HOST}"
    DB_NAME: "${DB_NAME}"
    DB_USER: "${DB_USER}"
    DB_PASSWORD: "${DB_PASSWORD}"
    DB_PORT: "${DB_PORT}"
    
    # Django configuration from GitHub Secrets
    SECRET_KEY: "${SECRET_KEY}"
    ALLOWED_HOSTS: "${ALLOWED_HOSTS}"
    DEBUG: "${DEBUG}"
