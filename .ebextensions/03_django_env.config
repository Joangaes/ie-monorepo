option_settings:
  aws:elasticbeanstalk:application:environment:
    # Django configuration (hardcoded for now)
    DJANGO_SETTINGS_MODULE: "ie_professor_management.settings"
    SECRET_KEY: "django-insecure-temp-key-change-this-in-production-later-12345"
    DEBUG: "false"
    
    # Host configuration for EB
    DJANGO_ALLOWED_HOSTS: "localhost,127.0.0.1,.elasticbeanstalk.com"
    DJANGO_CSRF_TRUSTED_ORIGINS: "https://*.elasticbeanstalk.com,http://*.elasticbeanstalk.com"
    
    # Non-sensitive configuration - database secrets are loaded from GitHub via CI/CD
    
    # Static files
    STATIC_ROOT: "/vol/static"
    MEDIA_ROOT: "/vol/media"
    
    # CORS settings - Allow frontend to call backend
    CORS_ALLOWED_ORIGINS: "https://ie-university-professors.scalewave.es,http://localhost:3000,https://your-frontend-domain.vercel.app"
    
    # Gunicorn settings
    GUNICORN_WORKERS: "2"
    GUNICORN_TIMEOUT: "120"
    
  # Health check configuration
  aws:elasticbeanstalk:environment:process:default:
    Port: 8000
    Protocol: HTTP
    HealthCheckPath: /health/
    HealthCheckInterval: 30
    HealthCheckTimeout: 5
    HealthyThresholdCount: 3
    UnhealthyThresholdCount: 5
