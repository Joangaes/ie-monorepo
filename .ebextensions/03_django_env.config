option_settings:
  aws:elasticbeanstalk:application:environment:
    # Django settings
    DEBUG: "false"
    SECRET_KEY: "your-secret-key-here-change-this-in-production"
    ALLOWED_HOSTS: "*"
    
    # Database settings - you need to configure these based on your RDS instance
    # For now, using SQLite as fallback to get the container running
    DB_HOST: ""
    DB_NAME: "ie_professors_db"
    DB_USER: "postgres"
    DB_PASSWORD: "password"
    DB_PORT: "5432"
    
    # Static files
    STATIC_ROOT: "/vol/static"
    MEDIA_ROOT: "/vol/media"
    
    # CORS settings
    CORS_ALLOWED_ORIGINS: "https://ie-university-professors.scalewave.es"
    CSRF_TRUSTED_ORIGINS: "https://ie-university-professors.scalewave.es"
    
    # Gunicorn settings
    GUNICORN_WORKERS: "2"
    GUNICORN_TIMEOUT: "120"
